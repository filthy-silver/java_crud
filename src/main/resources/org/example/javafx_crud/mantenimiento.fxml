<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx_crud.MantenimientoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TableView fx:id="tw_estudiantes" prefHeight="212.0" prefWidth="560.0">
        <columns>
            <TableColumn fx:id="NIAColumna" prefWidth="75.0" text="NIAColumna" />
            <TableColumn fx:id="nombreColumna" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="fechaNacimientoColumna" prefWidth="120.0" text="Fecha nacimiento" />
        </columns>
    </TableView>

    <Label/>
    <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="2.0" prefHeight="64.0" prefWidth="560.0">
        <children>
            <Button onAction="#editar" mnemonicParsing="false" text="Editar" />
            <Button onAction="#eliminar" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Eliminar" />
        </children>
    </FlowPane>
    <TextField fx:id="tf_nia" promptText="Indroduce un NIA" />
    <TextField fx:id="tf_nombre" promptText="Introduce un nombre" />
    <DatePicker fx:id="tf_fecha" promptText="Fecha de nacimiento" />
    <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="2.0" layoutX="30.0" layoutY="218.0" prefHeight="64.0" prefWidth="560.0">
        <children>
            <Button fx:id="btn_insertar" onAction="#insertar" mnemonicParsing="false" text="Insertar" />
            <Button fx:id="btn_guardar" onAction="#guardar" alignment="CENTER" contentDisplay="TOP" disable="true" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Guardar" />
        </children>
    </FlowPane>
</VBox>